<Window x:Class="CluSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:src="clr-namespace:CluSys"
        mc:Ignorable="d"
        Icon="App.ico"
        Title="CluSys"
        MinHeight="650"
        MinWidth="1024"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Thickness x:Key="MarginDefault">10</Thickness>

        <DataTemplate x:Key="UserMiniature">
            <StackPanel>
                <TextBlock Text="{Binding Path=FirstName}" />
                <TextBlock Text="{Binding Path=LastName}" />
                <TextBlock Text="{Binding Path=Address}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid x:Name="Layout" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50px" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid x:Name="TopBar" Background="White" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75px" />
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>

            <Image Source="App.ico" Grid.Column="0" Margin="{DynamicResource MarginDefault}" />
            <TextBlock Grid.Column="1" Margin="{DynamicResource MarginDefault}" VerticalAlignment="Center">Nome</TextBlock>
            <TextBlock Grid.Column="2" Margin="{DynamicResource MarginDefault}" HorizontalAlignment="Center" VerticalAlignment="Center">Menu to utilizador</TextBlock>
        </Grid>

        <Grid x:Name="Body" Background="White" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75px" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="{DynamicResource MarginDefault}">
                <fa:FontAwesome x:Name="Home" Icon="Home" FontSize="40" />
                <TextBlock>Paciente 1</TextBlock>
                <TextBlock>Paciente 2</TextBlock>
                <TextBlock>...</TextBlock>
            </StackPanel>

            <Grid x:Name="Content" Grid.Column="1">
                <Grid.Resources>
                    <src:Customers x:Key="customers" />
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ListBox x:Name="Favorites" Grid.Row="0"
                         Margin="{DynamicResource MarginDefault}"
                         ItemsSource="{Binding Source={StaticResource customers}}"
                         ItemTemplate="{StaticResource UserMiniature}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
                <StackPanel x:Name="Lists" Grid.Row="1" Orientation="Horizontal" Margin="{DynamicResource MarginDefault}">
                    <TextBlock>Lista 1</TextBlock>
                    <TextBlock>Lista 2</TextBlock>
                    <TextBlock>...</TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
