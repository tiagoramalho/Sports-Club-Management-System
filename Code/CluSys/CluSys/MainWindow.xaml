<Window x:Class="CluSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:src="clr-namespace:CluSys"
        mc:Ignorable="d"
        Icon="App.ico"
        Title="CluSys"
        MinHeight="650"
        MinWidth="1024"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Thickness x:Key="MarginDefault">10</Thickness>

        <DataTemplate x:Key="UserMiniature">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="ColumnSize" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Ellipse Height="48" Width="48" Grid.Row="0">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="App.ico" Stretch="UniformToFill" />
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock HorizontalAlignment="Center" Grid.Row="1">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} {1}">
                            <Binding Path="FirstName" />
                            <Binding Path="LastName" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock HorizontalAlignment="Center" Grid.Row="2" Text="{Binding Path=Modality}" />
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid x:Name="Layout">
        <Grid.RowDefinitions>
            <RowDefinition Height="50px" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid x:Name="TopBar" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75px" />
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>

            <Image Source="App.ico" Grid.Column="0" Margin="{DynamicResource MarginDefault}" />
            <TextBlock Grid.Column="1" Margin="{DynamicResource MarginDefault}" VerticalAlignment="Center">Nome</TextBlock>
            <TextBlock Grid.Column="2" Margin="{DynamicResource MarginDefault}" HorizontalAlignment="Center" VerticalAlignment="Center">Menu to utilizador</TextBlock>
        </Grid>

        <Grid x:Name="Body" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75px" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="{DynamicResource MarginDefault}">
                <fa:FontAwesome x:Name="Home" Icon="Home" FontSize="40" />
                <TextBlock>Paciente 1</TextBlock>
                <TextBlock>Paciente 2</TextBlock>
                <TextBlock>...</TextBlock>
            </StackPanel>

            <Grid x:Name="Content" Grid.Column="1">
                <Grid.Resources>
                    <src:Favorites x:Key="favorites" />
                    <src:Modalities x:Key="modalities" />
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ListBox x:Name="Favorites" Grid.Row="0"
                         BorderThickness="0"
                         Grid.IsSharedSizeScope="True"
                         Margin="{DynamicResource MarginDefault}"
                         ItemTemplate="{StaticResource UserMiniature}"
                         ItemsSource="{Binding Source={StaticResource favorites}}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>

                <ItemsControl Grid.Row="1"
                              Grid.IsSharedSizeScope="True"
                              Margin="{DynamicResource MarginDefault}"
                              ItemsSource="{Binding Source={StaticResource modalities}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="ColumnSize" />
                                </Grid.ColumnDefinitions>

                                <TextBlock>
                                    <TextBlock.Text>
                                        <Binding Path="Name" />
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
